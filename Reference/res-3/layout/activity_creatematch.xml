<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/html_info_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_edit_top">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/creatematch_title"
            android:textColor="@color/solebon_gold"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/left_navbar_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/back"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/next"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/right_navbar_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/creatematch_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/creatematch_message"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/creatematch_length_label"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_gold_stroke">

                    <TextView
                        android:id="@+id/minus_days"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_picker_left"
                        android:gravity="center"
                        android:text="@string/longdash"
                        android:textColor="@color/solebon_gold"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/solebon_gold" />

                    <TextView
                        android:id="@+id/plus_days"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_picker_right"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/solebon_gold"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hours_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_gold_stroke">

                    <TextView
                        android:id="@+id/minus_hours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_picker_left"
                        android:gravity="center"
                        android:text="@string/longdash"
                        android:textColor="@color/solebon_gold"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/solebon_gold" />

                    <TextView
                        android:id="@+id/plus_hours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_picker_right"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/solebon_gold"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/creatematch_customize_message"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/customizemessage_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_customize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/customizemessage_checkbox"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/customizemessage_intro_label"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/intro_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filled_rounded_rect_maroon"
                    android:enabled="false"
                    android:padding="8dp"
                    android:textColor="@color/solebon_gold"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/customizemessage_cardwords_label"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/cardwords_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/filled_rounded_rect_maroon"
                    android:enabled="false"
                    android:hint="@string/customizemessage_line1_hint"
                    android:padding="8dp"
                    android:textColor="@color/solebon_gold"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/cardwords_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/filled_rounded_rect_maroon"
                    android:enabled="false"
                    android:hint="@string/customizemessage_line2_hint"
                    android:padding="8dp"
                    android:textColor="@color/solebon_gold"
                    android:textColorHint="@color/transparent_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sample_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/customizemessage_taphere_message"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/sample_message_image"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/example_win_intro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/customizemessage_tap_next"
                    android:textColor="@color/solebon_gold"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/sharematch_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/sharematch_message"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/share_textmessage"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_dialog"
                android:text="@string/sharematch_textmessage"
                android:textColor="@color/solebon_gold"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/share_facebook"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_dialog"
                android:text="@string/sharematch_facebook"
                android:textColor="@color/solebon_gold"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/share_other"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_dialog"
                android:text="@string/sharematch_other"
                android:textColor="@color/solebon_gold"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/sharematch_message2"
                android:textColor="@color/solebon_gold"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>