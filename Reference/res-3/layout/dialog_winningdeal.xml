<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamelist_bg"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/fav_star_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/winningdeal_title"
                android:textColor="@color/solebon_gold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>
        </LinearLayout>

        <TextView
            android:id="@+id/deal_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winningdeal_dealid"
            android:textColor="@color/solebon_gold"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/deal_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/winningdeal_message"
            android:textColor="@color/solebon_gold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/done_button"
                android:background="@drawable/bg_starburst"/>

            <ImageView
                android:id="@+id/creatematch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:src="@drawable/create_match_button"
                android:background="@drawable/bg_starburst"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>