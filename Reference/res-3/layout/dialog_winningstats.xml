<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sun_ray">

    <ImageView
        android:id="@+id/win_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/win_top"/>

    <ImageView
        android:id="@+id/win_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/win_bottom"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/win_top"
        android:layout_above="@id/win_bottom"
        android:paddingTop="24dp"
        android:background="@drawable/win_middle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/winningstats_current_label"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/winningstats_best_label"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/winningstats_shortesttime_label"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shortesttime_current"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/shortesttime_best"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/winningstats_fewestmoves_label"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/fewestmoves_current"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/fewestmoves_best"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/winningstats_gamescore_label"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/bestscore_current"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/bestscore_best"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/winningstats_winstreak_label"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/winstreak_current"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/winstreak_best"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/winningstats_invitation"
            android:textColor="@color/solebon_gold"
            android:textSize="14sp"
            android:background="@drawable/bg_white_stroke"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/quickestwin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/winning_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/winningstats_quickestwin"
                android:textColor="@color/solebon_gold"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fewestmoves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/winning_moves"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/winningstats_fewestmoves"
                android:textColor="@color/solebon_gold"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bestscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/winning_score"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/winningstats_bestscore"
                android:textColor="@color/solebon_gold"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/longeststreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/winning_ribbon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/winningstats_longeststreak"
                android:textColor="@color/solebon_gold"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klondike 1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/firstwin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/winningstats_firstwin"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/newdeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_deal_button"
            android:background="@drawable/bg_starburst"/>

        <ImageView
            android:id="@+id/creatematch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/create_match_button"
            android:background="@drawable/bg_starburst"/>
    </LinearLayout>
</RelativeLayout>
